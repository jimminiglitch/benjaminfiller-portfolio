      // ==================== CUSTOM CURSOR (OPTIMIZED) ====================
      const hasFinePointer = window.matchMedia('(pointer: fine)').matches;
      const supportsHover = window.matchMedia('(hover: hover)').matches;
      const fallbackNonTouch = !('ontouchstart' in window) && navigator.maxTouchPoints === 0;
    const enableDesktopInteractions = (hasFinePointer && supportsHover) || fallbackNonTouch;
    const cursor = document.querySelector('.custom-cursor') as HTMLElement | null;
    const bodyElement = document.body;
      let mouseX = 0, mouseY = 0;

      if (enableDesktopInteractions && cursor) {
        bodyElement.classList.remove('custom-cursor-disabled');
        cursor.style.display = '';

        window.addEventListener('pointermove', (e: PointerEvent) => {
          if (e.pointerType !== 'mouse') return;
          mouseX = e.clientX;
          mouseY = e.clientY;
        }, { passive: true });

        const renderCursor = () => {
          cursor.style.transform = `translate3d(${mouseX}px, ${mouseY}px, 0)`;
          requestAnimationFrame(renderCursor);
        };

        requestAnimationFrame(renderCursor);

        const interactiveSelectors = 'a, button, .skill-card, .project-card';
        document.querySelectorAll(interactiveSelectors).forEach(el => {
          el.addEventListener('pointerenter', (event: Event) => {
            const pointerEvent = event as PointerEvent;
            if (pointerEvent.pointerType !== 'mouse') return;
            cursor.classList.add('hover');
          });
          el.addEventListener('pointerleave', () => cursor.classList.remove('hover'));
        });
      } else {
        if (cursor) {
          cursor.style.display = 'none';
        }
        bodyElement.classList.add('custom-cursor-disabled');
      }

      // ==================== 3D TILT EFFECT ====================
      if (enableDesktopInteractions) {
        document.querySelectorAll('.skill-card, .project-card').forEach(card => {
          const htmlCard = card as HTMLElement;
          
          card.addEventListener('mousemove', (e: Event) => {
            const mouseEvent = e as MouseEvent;
            const rect = htmlCard.getBoundingClientRect();
            const x = mouseEvent.clientX - rect.left;
            const y = mouseEvent.clientY - rect.top;
            
            const centerX = rect.width / 2;
            const centerY = rect.height / 2;
            
            const rotateX = (y - centerY) / CONFIG.TILT_DIVISOR;
            const rotateY = (centerX - x) / CONFIG.TILT_DIVISOR;
            
            htmlCard.style.transform = `
              translateY(-15px) 
              rotateX(${rotateX}deg) 
              rotateY(${rotateY}deg)
              scale(1.02)
            `;
          });

          card.addEventListener('mouseleave', () => {
            htmlCard.style.transform = '';
          });
