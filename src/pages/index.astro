---
// Professional Profile Page - Bold Creative Redesign
import { profile, sameAs, resolvedSiteUrl, getAbsoluteOgImage } from '../data/profile'
import { projects, getFeaturedProjects } from '../data/projects'

const title = profile.title
const description = profile.description
// Prefer environment-defined site URL for correct canonical/OG
// Set PUBLIC_SITE_URL in your environment (e.g., https://your-domain.com)
const publicSiteUrl = resolvedSiteUrl
const defaultOgPath = profile.ogImagePath
// Build JSON-LD with env-driven URLs when available
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Benjamin Filler',
  url: publicSiteUrl || undefined,
  image: getAbsoluteOgImage(),
  sameAs,
  jobTitle: 'Creative Developer & Digital Artist',
  description:
    'Detroit-based creative developer, filmmaker, and artist specializing in immersive web experiences, film production, and interactive multimedia projects',
  knowsAbout: [
    'Web Development',
    'Filmmaking',
    'Digital Art',
    'Interactive Media',
    'Sound Design',
    'Instructional Design',
  ],
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Detroit',
    addressRegion: 'MI',
    addressCountry: 'US',
  },
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
  <!-- Canonical URL -->
  {publicSiteUrl && <link rel="canonical" href={publicSiteUrl} />}
    
    <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  {publicSiteUrl && <meta property="og:url" content={publicSiteUrl} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
  <meta property="og:image" content={(publicSiteUrl ? publicSiteUrl.replace(/\/$/, '') + defaultOgPath : defaultOgPath)} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Benjamin Filler Portfolio" />
    
    <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  {publicSiteUrl && <meta name="twitter:url" content={publicSiteUrl} />}
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={(publicSiteUrl ? publicSiteUrl.replace(/\/$/, '') + defaultOgPath : defaultOgPath)} />
    <meta name="twitter:creator" content="@jimminiglitch" />
    
    <!-- Additional SEO -->
    <meta name="author" content="Benjamin Filler" />
    <meta name="keywords" content="creative developer, digital artist, filmmaker, web developer, interactive media, Detroit artist, multimedia designer" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#0a0a0f" />
    
    <!-- Structured Data / JSON-LD -->
    <script type="application/ld+json">{JSON.stringify(jsonLd)}</script>

    <style>
      :root {
        --cyan: #00ffff;
        --magenta: #ff00ff;
        --purple: #8b5cf6;
        --dark: #0a0a0f;
        --darker: #050508;
        --light: #f8f9fa;
        --gray: #6b7280;
        --surface-glass: rgba(12, 12, 20, 0.72);
        --surface-raised: rgba(16, 16, 26, 0.88);
        --surface-muted: rgba(255, 255, 255, 0.04);
        --surface-highlight: rgba(255, 255, 255, 0.06);
        --surface-hero: rgba(20, 20, 38, 0.9);
        --border-glow: rgba(0, 255, 255, 0.18);
        --border-soft: rgba(255, 255, 255, 0.08);
        --border-strong: rgba(255, 0, 255, 0.25);
        --shadow-soft: 0 18px 44px rgba(4, 6, 14, 0.45);
        --shadow-hero: 0 40px 120px rgba(4, 6, 20, 0.55);
        
        --font-main: 'Space Grotesk', -apple-system, system-ui, sans-serif;
        --font-display: 'Archivo Black', sans-serif;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        scroll-behavior: auto; /* Lenis handles smooth scrolling */
        scroll-padding-top: 80px;
      }

      body {
        font-family: var(--font-main);
        background: var(--dark);
        color: var(--light);
        line-height: 1.6;
        overflow-x: hidden;
        position: relative;
        cursor: none;
      }

      body.loading {
        overflow: hidden;
      }

      body.custom-cursor-disabled {
        cursor: auto;
      }

      body.custom-cursor-disabled .custom-cursor {
        display: none !important;
      }

      /* ==================== LOADING SCREEN ==================== */
      .loading-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #0a0a0f 0%, #1a0a1f 50%, #0a0a0f 100%);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 10000;
        transition: opacity 0.8s ease, transform 0.8s ease;
      }

      .loading-screen.fade-out {
        opacity: 0;
        transform: scale(1.1);
        pointer-events: none;
      }

      .loading-logo {
        font-family: var(--font-display);
        font-size: clamp(4rem, 15vw, 12rem);
        font-weight: 900;
        background: linear-gradient(135deg, var(--cyan) 0%, var(--magenta) 50%, var(--purple) 100%);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: logoGlow 2s ease-in-out infinite, gradientMove 8s ease infinite;
        letter-spacing: -0.05em;
        position: relative;
        filter: drop-shadow(0 0 40px rgba(0, 255, 255, 0.6));
      }

      @keyframes logoGlow {
        0%, 100% { 
          filter: drop-shadow(0 0 40px rgba(0, 255, 255, 0.6)) 
                  drop-shadow(0 0 80px rgba(255, 0, 255, 0.4));
        }
        50% { 
          filter: drop-shadow(0 0 60px rgba(0, 255, 255, 0.8)) 
                  drop-shadow(0 0 120px rgba(255, 0, 255, 0.6));
        }
      }

      .loading-progress {
        margin-top: 3rem;
        width: 300px;
        height: 4px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 2px;
        overflow: hidden;
        position: relative;
      }

      .loading-progress-bar {
        height: 100%;
        background: linear-gradient(90deg, var(--cyan), var(--magenta), var(--purple));
        background-size: 200% 100%;
        animation: progressShimmer 1.5s ease-in-out infinite;
        width: 0%;
        transition: width 0.3s ease;
      }

      @keyframes progressShimmer {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
      }

      .loading-text {
        margin-top: 1.5rem;
        font-size: 0.9rem;
        color: var(--gray);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 600;
      }

      body::before {
        content: '';
        position: fixed;
        inset: 0;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence baseFrequency='0.9' numOctaves='3' /%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.05'/%3E%3C/svg%3E");
        pointer-events: none;
        z-index: 9999;
        animation: grain 0.5s steps(10) infinite;
      }

      @keyframes grain {
        0%, 100% { transform: translate(0, 0); }
        10% { transform: translate(-2%, -2%); }
        20% { transform: translate(2%, 2%); }
        30% { transform: translate(-3%, 3%); }
        40% { transform: translate(3%, -3%); }
        50% { transform: translate(-2%, 2%); }
        60% { transform: translate(2%, -2%); }
        70% { transform: translate(-3%, -3%); }
        80% { transform: translate(3%, 3%); }
        90% { transform: translate(-2%, -2%); }
      }

      /* Animated Background */
      .bg-gradient {
        position: fixed;
        inset: 0;
        z-index: -1;
        background: 
          radial-gradient(circle at 20% 50%, rgba(0, 255, 255, 0.2) 0%, transparent 50%),
          radial-gradient(circle at 80% 20%, rgba(255, 0, 255, 0.2) 0%, transparent 50%),
          radial-gradient(circle at 40% 80%, rgba(139, 92, 246, 0.2) 0%, transparent 50%);
        animation: gradientShift 15s ease infinite;
      }

      @keyframes gradientShift {
        0%, 100% { 
          opacity: 1; 
          transform: scale(1) rotate(0deg);
          filter: hue-rotate(0deg);
        }
        33% { 
          opacity: 0.9; 
          transform: scale(1.15) rotate(3deg);
          filter: hue-rotate(30deg);
        }
        66% { 
          opacity: 0.85; 
          transform: scale(1.1) rotate(-2deg);
          filter: hue-rotate(-20deg);
        }
      }

      /* Particles Canvas */
      #particles {
        position: fixed;
        inset: 0;
        z-index: -1;
        pointer-events: none;
      }

      /* Custom Cursor */
      body {
        cursor: none;
      }

      .custom-cursor {
        position: fixed;
        width: 20px;
        height: 20px;
        border: 2px solid var(--cyan);
        border-radius: 50%;
        pointer-events: none;
        z-index: 10000;
        transition: width 0.2s ease, height 0.2s ease, background 0.2s ease, border-color 0.2s ease;
        mix-blend-mode: difference;
        will-change: transform;
      }

      .custom-cursor::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 4px;
        height: 4px;
        background: var(--cyan);
        border-radius: 50%;
      }

      .custom-cursor.hover {
        width: 40px;
        height: 40px;
        background: rgba(0, 255, 255, 0.1);
        border-color: var(--magenta);
      }


      body.custom-cursor-disabled a,
      body.custom-cursor-disabled button,
      body.custom-cursor-disabled .nav-link,
      body.custom-cursor-disabled .btn,
      body.custom-cursor-disabled .contact-link,
      body.custom-cursor-disabled .project-link,
      body.custom-cursor-disabled .mobile-menu-toggle {
        cursor: pointer;
      }

      /* Respect user's motion preferences */
      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
        
        .custom-cursor {
          display: none !important;
        }
        
        .reveal {
          opacity: 1 !important;
          transform: none !important;
          filter: none !important;
        }
      }

      /* Skip to main content link for accessibility */
      .skip-to-main {
        position: absolute;
        left: -9999px;
        z-index: 999;
        padding: 1rem 2rem;
        background: var(--cyan);
        color: var(--dark);
        text-decoration: none;
        font-weight: bold;
        border-radius: 0 0 4px 0;
      }

      .skip-to-main:focus {
        left: 0;
        top: 0;
      }

      /* Grid Overlay */
      .grid-overlay {
        position: fixed;
        inset: 0;
        z-index: -1;
        background-image: 
          linear-gradient(rgba(0, 255, 255, 0.03) 1px, transparent 1px),
          linear-gradient(90deg, rgba(0, 255, 255, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
        pointer-events: none;
      }

      .grid-overlay::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(
          transparent 0%,
          rgba(0, 255, 255, 0.02) 50%,
          transparent 100%
        );
        background-size: 100% 4px;
        animation: scanline 8s linear infinite;
        pointer-events: none;
      }

      @keyframes scanline {
        0% { transform: translateY(-100%); }
        100% { transform: translateY(100vh); }
      }

      /* Navigation */
      .nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background: var(--surface-glass);
        -webkit-backdrop-filter: blur(22px);
        backdrop-filter: blur(22px);
        border-bottom: 1px solid var(--border-glow);
        border-inline: 1px solid var(--border-soft);
        box-shadow: 0 12px 30px rgba(4, 6, 20, 0.35);
        transition: transform 0.3s ease, background 0.3s ease, box-shadow 0.3s ease;
      }

      .nav-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 1.1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
      }

      .nav-container::after {
        content: '';
        position: absolute;
        inset: 12px;
        border-radius: 18px;
        border: 1px solid rgba(255, 255, 255, 0.03);
        pointer-events: none;
        opacity: 0.7;
      }

      .nav-logo {
        font-family: var(--font-display);
        font-size: 1.5rem;
        color: var(--cyan);
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.3s ease;
      }

      .nav-logo:hover {
        color: var(--magenta);
        text-shadow: 0 0 20px var(--magenta);
      }

      .nav-links {
        display: flex;
        align-items: center;
        gap: 2.25rem;
        list-style: none;
      }

      .nav-link {
        color: var(--light);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.12em;
        position: relative;
        transition: color 0.25s ease;
      }

      .nav-link::before {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 0;
        height: 1px;
        background: linear-gradient(90deg, var(--cyan), var(--magenta));
        transition: width 0.25s ease;
        opacity: 0.9;
      }

      .nav-link:hover {
        color: var(--cyan);
      }

      .nav-link:hover::before {
        width: 100%;
      }

      /* Hero Section */
      .hero {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10rem 2rem 5rem;
        position: relative;
      }

      .hero-content {
        max-width: 1100px;
        width: 100%;
        position: relative;
        z-index: 2;
        padding: clamp(3rem, 6vw, 4rem);
        border-radius: 36px;
        border: 1px solid var(--border-glow);
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.12), rgba(255, 0, 255, 0.05)) var(--surface-hero);
        box-shadow: var(--shadow-hero);
        -webkit-backdrop-filter: blur(26px);
        backdrop-filter: blur(26px);
        overflow: hidden;
      }

      .hero-content::before {
        content: '';
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 15% 20%, rgba(0, 255, 255, 0.22), transparent 55%),
          radial-gradient(circle at 85% 30%, rgba(255, 0, 255, 0.18), transparent 50%),
          radial-gradient(circle at 50% 80%, rgba(139, 92, 246, 0.22), transparent 60%);
        opacity: 0.75;
        mix-blend-mode: screen;
        pointer-events: none;
        animation: heroGlow 12s ease-in-out infinite;
      }

      .hero-content > * {
        position: relative;
        z-index: 1;
      }

      @keyframes heroGlow {
        0%, 100% { transform: scale(1); opacity: 0.75; }
        50% { transform: scale(1.05); opacity: 0.92; }
      }

      .hero-image {
        width: 200px;
        height: 200px;
        margin: 0 auto 3rem;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid var(--cyan);
        box-shadow: 
          0 0 30px rgba(0, 255, 255, 0.5),
          0 0 60px rgba(255, 0, 255, 0.3),
          inset 0 0 20px rgba(0, 255, 255, 0.2);
        animation: profileGlow 3s ease-in-out infinite;
        position: relative;
      }

      .hero-image::before {
        content: '';
        position: absolute;
        inset: -3px;
        border-radius: 50%;
        padding: 3px;
        background: linear-gradient(45deg, var(--cyan), var(--magenta), var(--purple), var(--cyan));
        -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        animation: gradientRotate 4s linear infinite;
        pointer-events: none;
      }

      .hero-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
      }

      @keyframes profileGlow {
        0%, 100% {
          box-shadow: 
            0 0 30px rgba(0, 255, 255, 0.5),
            0 0 60px rgba(255, 0, 255, 0.3),
            inset 0 0 20px rgba(0, 255, 255, 0.2);
          border-color: var(--cyan);
        }
        50% {
          box-shadow: 
            0 0 40px rgba(255, 0, 255, 0.6),
            0 0 80px rgba(0, 255, 255, 0.4),
            inset 0 0 30px rgba(255, 0, 255, 0.2);
          border-color: var(--magenta);
        }
      }

      @keyframes gradientRotate {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }

      .hero-title {
        font-family: var(--font-display);
        font-size: clamp(3rem, 10vw, 8rem);
        line-height: 0.9;
        margin-bottom: 2rem;
        text-transform: uppercase;
        letter-spacing: -2px;
        background: linear-gradient(135deg, var(--cyan) 0%, var(--magenta) 50%, var(--purple) 100%);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: titleGlow 3s ease-in-out infinite, gradientMove 8s ease infinite;
        position: relative;
      }

      @keyframes titleGlow {
        0%, 100% { 
          filter: drop-shadow(0 0 30px rgba(0, 255, 255, 0.6)) 
                  drop-shadow(0 0 60px rgba(255, 0, 255, 0.4)); 
        }
        50% { 
          filter: drop-shadow(0 0 40px rgba(255, 0, 255, 0.6))
                  drop-shadow(0 0 80px rgba(0, 255, 255, 0.3)); 
        }
      }

      @keyframes gradientMove {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
      }

      .hero-subtitle {
        font-size: clamp(1.2rem, 2.6vw, 1.9rem);
        color: var(--light);
        margin-bottom: 3rem;
        max-width: 760px;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.4em;
        display: inline-flex;
        align-items: center;
        gap: 1.25rem;
      }

      .hero-subtitle::before {
        content: '';
        display: inline-block;
        width: 60px;
        height: 2px;
        background: linear-gradient(90deg, var(--cyan), var(--magenta));
        opacity: 0.8;
      }

      .hero-cta {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        padding: 1rem 0 0;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
      }

      .btn {
        padding: 1rem 2.5rem;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        border-radius: 0;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 2px solid;
        text-transform: uppercase;
        letter-spacing: 1px;
        position: relative;
        overflow: hidden;
        font-family: var(--font-main);
        transform-style: preserve-3d;
      }

      .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.6s ease;
      }

      .btn::after {
        content: '';
        position: absolute;
        inset: 0;
        background: inherit;
        filter: blur(20px);
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: -1;
      }

      .btn:hover::before {
        left: 100%;
      }

      .btn:hover::after {
        opacity: 0.8;
      }

      .btn-primary {
        background: var(--cyan);
        color: var(--dark);
        border-color: var(--cyan);
      }

      .btn-primary:hover {
        background: transparent;
        color: var(--cyan);
        box-shadow: 
          0 0 40px rgba(0, 255, 255, 0.6),
          0 10px 30px rgba(0, 255, 255, 0.3),
          inset 0 0 20px rgba(0, 255, 255, 0.2);
        transform: translateY(-3px) scale(1.05);
      }

      .btn-secondary {
        background: transparent;
        color: var(--magenta);
        border-color: var(--magenta);
        box-shadow: inset 0 0 0 rgba(255, 0, 255, 0);
      }

      .btn-secondary:hover {
        background: var(--magenta);
        color: var(--dark);
        box-shadow: 0 0 30px rgba(255, 0, 255, 0.5);
        transform: translateY(-3px) scale(1.04);
      }

      .btn-tertiary {
        background: transparent;
        color: var(--purple);
        border-color: var(--purple);
        box-shadow: inset 0 0 0 rgba(139, 92, 246, 0);
      }

      .btn-tertiary:hover {
        background: var(--purple);
        color: var(--dark);
        box-shadow: 0 0 30px rgba(139, 92, 246, 0.5);
        transform: translateY(-3px) scale(1.04);
      }

      /* Focus styles for keyboard navigation */
      a:focus-visible,
      button:focus-visible,
      input:focus-visible,
      textarea:focus-visible {
        outline: 3px solid var(--cyan);
        outline-offset: 4px;
        border-radius: 2px;
      }

      .nav-link:focus-visible {
        background: rgba(0, 255, 255, 0.1);
      }

      /* Section Base */
      .section {
        padding: 8rem 2rem;
        max-width: 1400px;
        margin: 0 auto;
        position: relative;
      }

      /* About Section Specific */
      #about {
        padding: 1rem 2rem;
      }

      #about .section-title {
        font-size: 40px;
        margin: 0 0 10px;
      }

      .section-title {
        font-family: var(--font-display);
        font-size: clamp(2.5rem, 6vw, 5rem);
        margin-bottom: 4rem;
        text-transform: uppercase;
        letter-spacing: -1px;
        background: linear-gradient(135deg, var(--cyan) 0%, var(--magenta) 50%, var(--purple) 100%);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradientMove 8s ease infinite;
        text-shadow: 0 0 40px rgba(0, 255, 255, 0.5);
        position: relative;
      }

      .section-title::after {
        content: '';
        position: absolute;
        bottom: -20px;
        left: 0;
        width: 100px;
        height: 4px;
        background: linear-gradient(90deg, var(--cyan), var(--magenta));
        animation: lineExpand 3s ease infinite;
      }

      @keyframes lineExpand {
        0%, 100% { width: 100px; opacity: 1; }
        50% { width: 200px; opacity: 0.6; }
      }

      /* About Section */
      .about-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 6rem;
        align-items: center;
      }

      .section-title + .about-grid {
        margin-top: 1.5rem;
      }

      .about-text {
