    <!-- ==================== SMOOTH SCROLL WITH LENIS ==================== -->
    <script type="module">
      import Lenis from 'https://cdn.jsdelivr.net/npm/@studio-freight/lenis@1.0.29/dist/lenis.min.mjs';

      const lenis = new Lenis({
        duration: 1.2,
        easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
        direction: 'vertical',
        gestureDirection: 'vertical',
        smooth: true,
        mouseMultiplier: 1,
        smoothTouch: false,
        touchMultiplier: 2,
        infinite: false,
      });

      function raf(time) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }

      requestAnimationFrame(raf);

      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            lenis.scrollTo(target, {
              offset: -80,
              duration: 1.5,
            });
          }
        });
      });

      // DVD Screensaver Physics for About Image
      const aboutImage = document.querySelector('.about-image');
      const aboutWrapper = document.querySelector('.about-image-wrapper');

      if (aboutImage && aboutWrapper) {
        let x = 0;
        let y = 0;
        let dx = 1.5; // horizontal velocity
        let dy = 1.2; // vertical velocity
        
        const imageWidth = 200;
        const imageHeight = 200;
        const containerWidth = 500;
        const containerHeight = 300;

        let isDragging = false;
        let lastX = 0;
        let lastY = 0;
        let lastTime = 0;
        let velocityX = 0;
        let velocityY = 0;

        // Mouse/Touch down - start dragging
        aboutImage.addEventListener('mousedown', (e) => {
          isDragging = true;
          const rect = aboutWrapper.getBoundingClientRect();
          lastX = e.clientX;
          lastY = e.clientY;
          lastTime = Date.now();
          velocityX = 0;
          velocityY = 0;
          aboutImage.style.cursor = 'grabbing';
          e.preventDefault();
        });

        aboutImage.addEventListener('touchstart', (e) => {
          isDragging = true;
          lastX = e.touches[0].clientX;
          lastY = e.touches[0].clientY;
          lastTime = Date.now();
          velocityX = 0;
          velocityY = 0;
          e.preventDefault();
        });

        // Mouse/Touch move - drag the image
        document.addEventListener('mousemove', (e) => {
          if (!isDragging) return;
          
          const currentTime = Date.now();
          const deltaTime = currentTime - lastTime;
          
          const rect = aboutWrapper.getBoundingClientRect();
          const newX = e.clientX - rect.left - imageWidth / 2;
          const newY = e.clientY - rect.top - imageHeight / 2;
          
          x = Math.max(0, Math.min(newX, containerWidth - imageWidth));
          y = Math.max(0, Math.min(newY, containerHeight - imageHeight));
          
          // Track velocity during drag
          if (deltaTime > 0) {
            velocityX = (e.clientX - lastX) / deltaTime;
            velocityY = (e.clientY - lastY) / deltaTime;
          }
          
          lastX = e.clientX;
          lastY = e.clientY;
          lastTime = currentTime;
        });

        document.addEventListener('touchmove', (e) => {
          if (!isDragging) return;
          
          const currentTime = Date.now();
          const deltaTime = currentTime - lastTime;
          
          const rect = aboutWrapper.getBoundingClientRect();
          const newX = e.touches[0].clientX - rect.left - imageWidth / 2;
          const newY = e.touches[0].clientY - rect.top - imageHeight / 2;
          
          x = Math.max(0, Math.min(newX, containerWidth - imageWidth));
          y = Math.max(0, Math.min(newY, containerHeight - imageHeight));
          
          // Track velocity during drag
          if (deltaTime > 0) {
            velocityX = (e.touches[0].clientX - lastX) / deltaTime;
            velocityY = (e.touches[0].clientY - lastY) / deltaTime;
          }
          
          lastX = e.touches[0].clientX;
          lastY = e.touches[0].clientY;
          lastTime = currentTime;
        });

        // Mouse/Touch up - throw the image
        document.addEventListener('mouseup', (e) => {
          if (!isDragging) return;
          
          // Apply the tracked velocity with strong multiplier
          dx = velocityX * 30; // Strong throw power
          dy = velocityY * 30;
          
          // Cap max velocity
          const maxSpeed = 20;
          dx = Math.max(-maxSpeed, Math.min(dx, maxSpeed));
          dy = Math.max(-maxSpeed, Math.min(dy, maxSpeed));
          
          // If barely moving, set default speed
          if (Math.abs(dx) < 0.5) dx = 1.5;
          if (Math.abs(dy) < 0.5) dy = 1.2;
          
          isDragging = false;
          aboutImage.style.cursor = 'grab';
        });

        document.addEventListener('touchend', (e) => {
          if (!isDragging) return;
          
          // Apply the tracked velocity with strong multiplier
          dx = velocityX * 30;
          dy = velocityY * 30;
          
          // Cap max velocity
          const maxSpeed = 20;
          dx = Math.max(-maxSpeed, Math.min(dx, maxSpeed));
          dy = Math.max(-maxSpeed, Math.min(dy, maxSpeed));
          
          // If barely moving, set default speed
          if (Math.abs(dx) < 0.5) dx = 1.5;
          if (Math.abs(dy) < 0.5) dy = 1.2;
          
          isDragging = false;
        });

        // Set cursor style
        aboutImage.style.cursor = 'grab';

        function animateDVD() {
          if (!isDragging) {
            // Apply friction/decay to gradually slow down to normal speed
            const friction = 0.98;
            const minSpeed = 1.5;
            
            if (Math.abs(dx) > minSpeed) {
              dx *= friction;
            } else {
              dx = dx > 0 ? minSpeed : -minSpeed;
            }
            
            if (Math.abs(dy) > minSpeed) {
              dy *= friction;
            } else {
              dy = dy > 0 ? 1.2 : -1.2;
            }

            // Update position
            x += dx;
            y += dy;

            // Bounce off edges
            if (x <= 0 || x + imageWidth >= containerWidth) {
              dx = -dx;
              x = Math.max(0, Math.min(x, containerWidth - imageWidth));
            }
            if (y <= 0 || y + imageHeight >= containerHeight) {
              dy = -dy;
              y = Math.max(0, Math.min(y, containerHeight - imageHeight));
            }
          }

          // Apply position
          aboutImage.style.left = `${x}px`;
          aboutImage.style.top = `${y}px`;

          // Dynamic glow speed based on velocity
          const speed = Math.sqrt(dx * dx + dy * dy);
          const normalSpeed = Math.sqrt(1.5 * 1.5 + 1.2 * 1.2); // ~1.9
          const speedRatio = speed / normalSpeed;
          
          // Faster box glow when moving fast
          const safeRatio = Math.max(speedRatio, 0.001);
          const glowDuration = Math.max(0.5, 3 / safeRatio);
          aboutWrapper.style.animationDuration = `${glowDuration}s`;
          
          // Faster rainbow background rotation when moving fast
          const rainbowDuration = Math.max(1, 8 / safeRatio);
          aboutWrapper.style.setProperty('--rainbow-duration', `${rainbowDuration}s`);
          
          // Brighter image glow when moving fast
          const imageGlowIntensity = Math.min(40, 20 * speedRatio);
          aboutImage.style.boxShadow = `0 0 ${imageGlowIntensity}px rgba(255, 0, 255, 0.6)`;

          requestAnimationFrame(animateDVD);
        }

        animateDVD();
      }
