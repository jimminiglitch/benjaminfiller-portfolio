      // ==================== MAGNETIC EFFECT ON NAV LOGO ====================
      const navLogo = document.querySelector('.nav-logo') as HTMLElement | null;
  if (navLogo && enableDesktopInteractions) {
        navLogo.addEventListener('mousemove', (e: Event) => {
