---
import { getCollection } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';

const posts = (await getCollection('blog', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const formatDate = (date: Date) =>
  new Intl.DateTimeFormat('en-US', { dateStyle: 'medium' }).format(date);
---

<BlogLayout
  title="Studio Journal"
  description="Profiles, process notes, and dispatches from the lab."
  pageType="index"
>
  <Fragment slot="hero">
    <h1>Studio Journal</h1>
    <p>
      Long-form notes on craft, community, and the mentors who shaped my practice. Expect
      deep dives into production process, creative tools, and the collaborators who keep the work
      moving.
    </p>
  </Fragment>

  {posts.map((post) => (
    <article class="post-card">
      <div class="post-card-meta">
        <span class="post-card-date">{formatDate(post.data.pubDate)}</span>
        {post.data.minutesRead && (
          <span class="post-card-read">{post.data.minutesRead} min read</span>
        )}
      </div>
      <h2 class="post-card-title">
        <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
      </h2>
      <p class="post-card-description">{post.data.description}</p>
      {post.data.tags.length > 0 && (
        <div class="post-card-tags">
          {post.data.tags.slice(0, 3).map((tag) => (
            <span class="post-card-tag">#{tag}</span>
          ))}
        </div>
      )}
      <div class="post-card-footer">
        <a class="post-card-link" href={`/blog/${post.slug}/`}>
          Read Article â†’
        </a>
      </div>
    </article>
  ))}
</BlogLayout>

<style>
  .post-card {
    padding: 2.25rem;
    border-radius: 28px;
    border: 1px solid rgba(0, 255, 255, 0.22);
    background: linear-gradient(140deg, rgba(0, 255, 255, 0.08), rgba(255, 0, 255, 0.07)) rgba(12, 12, 22, 0.78);
    box-shadow: 0 18px 40px rgba(5, 8, 18, 0.45);
    display: grid;
    gap: 1.25rem;
    transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
  }

  .post-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 24px 60px rgba(5, 12, 30, 0.6);
    border-color: rgba(255, 0, 255, 0.28);
  }

  .post-card-meta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    font-size: 0.85rem;
    letter-spacing: 0.6px;
    text-transform: uppercase;
    color: rgba(200, 206, 220, 0.68);
  }

  .post-card-title {
    font-family: var(--font-display);
    font-size: clamp(1.8rem, 4vw, 2.3rem);
    letter-spacing: 1.6px;
    text-transform: uppercase;
  }

  .post-card-title a {
    color: var(--light);
  }

  .post-card-description {
    color: rgba(228, 232, 244, 0.85);
    font-size: 1.02rem;
    line-height: 1.65;
  }

  .post-card-tags {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .post-card-tag {
    font-size: 0.78rem;
    padding: 0.35rem 0.85rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 0, 255, 0.35);
    background: rgba(255, 0, 255, 0.14);
    letter-spacing: 0.6px;
  }

  .post-card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .post-card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.1px;
  }

  .post-card-link::after {
    content: '';
    width: 38px;
    height: 2px;
    background: linear-gradient(90deg, var(--cyan), var(--magenta));
    display: inline-block;
    transform: translateY(2px);
  }

  @media (max-width: 768px) {
    .post-card {
      padding: 1.85rem;
    }

    .post-card-footer {
      justify-content: flex-start;
    }
  }
</style>
